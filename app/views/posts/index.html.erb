<h1>Posts</h1>


<table>
  <thead>
  <tr>

    <th>id</th>
  <th>title</th>
  <th>description</th>
  <th>actions</th>
  </tr>

  </thead>
  <tbody>
  <% @posts.each do |post| %>
  <tr>
    <td><%=post.id %></td>
    <td><%=post.title %></td>
    <td><%=post.description %></td>
    <td><%= link_to "edit", edit_post_path(post.id) %></td>
    <td><%= link_to "view detail", post_path(post.id) %></td>
     <td><%= link_to "delete", post_path(post), method: :delete, remote: true, data: { turbo_confirm: "Are you sure?", turbo_method: :delete } %></td>
  </tr>
  <% end %>
  </tbody>

</table>
<%= link_to "new Page", new_post_path %>
